<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/stories_rec_view_story_img"
            android:layout_width="@dimen/_50mdp"
            android:layout_height="@dimen/_50mdp"
            android:layout_marginTop="@dimen/_6mdp"
            android:scaleType="centerCrop"
            android:src="@drawable/gray_bg_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/stories_rec_view_story_type"
        android:layout_width="@dimen/_15mdp"
        android:layout_height="@dimen/_15mdp"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toBottomOf="@+id/stories_rec_view_story_img"
        app:layout_constraintEnd_toEndOf="@+id/stories_rec_view_story_img"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/stories_rec_view_story_img"
        app:layout_constraintTop_toTopOf="@+id/stories_rec_view_story_img"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/stories_rec_view_story_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:fontFamily="@font/robotic"
        android:textColor="@color/black"
        android:textSize="@dimen/_10font_mdp"
        app:layout_constraintEnd_toEndOf="@+id/stories_rec_view_story_img"
        app:layout_constraintStart_toStartOf="@+id/stories_rec_view_story_img"
        app:layout_constraintTop_toBottomOf="@+id/stories_rec_view_story_img" />


</androidx.constraintlayout.widget.ConstraintLayout>